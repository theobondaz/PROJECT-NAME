<p id="notice"><%= notice %></p>

<h1>Flats</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.name %></td>
        <td><%= flat.address %></td>
        <td id='flatlatitude'><%= flat.latitude %></td>
        <td id='flatlongitude'><%= flat.longitude %></td>

        <td><%= link_to 'Show', flat %></td>
        <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Flat', new_flat_path %>



<div class="row">

  <div class="col-md-3">
    <div class='flatcard'>
      <h3 id='address'>ABC</h3>
      <p id='description'>DEF</p>
      <h2 id='price'>GHI</h2>
    </div>
  </div>


  <div class="col-md-9">
    
      <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

      </div>


  </div>
